# Otomanus - Environment Variables Example
# Copy this file to .env and fill in your values

# ===========================================
# Application Settings
# ===========================================
APP_PORT=8000
APP_ENV=development
DEBUG=true

# ===========================================
# LLM API Keys
# ===========================================
# OpenAI API Key (required for GPT models)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API Key (optional, for Claude models)
ANTHROPIC_API_KEY=

# Ollama Base URL (optional, for local models)
OLLAMA_BASE_URL=http://localhost:11434

# ===========================================
# Database Configuration
# ===========================================
POSTGRES_USER=otomanus
POSTGRES_PASSWORD=otomanus123
POSTGRES_DB=otomanus
POSTGRES_PORT=5432

# Full database URL (auto-generated in docker-compose)
# DATABASE_URL=postgresql://otomanus:otomanus123@postgres:5432/otomanus

# ===========================================
# Redis Configuration
# ===========================================
REDIS_PORT=6379
# REDIS_URL=redis://redis:6379/0

# ===========================================
# Nginx Configuration (Production)
# ===========================================
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# ===========================================
# Development Tools
# ===========================================
ADMINER_PORT=8080

# ===========================================
# Search Engine Configuration
# ===========================================
# Google Custom Search API (optional)
GOOGLE_API_KEY=
GOOGLE_CX=

# Bing Search API (optional)
BING_API_KEY=

# ===========================================
# Browser Configuration
# ===========================================
BROWSER_HEADLESS=false
BROWSER_DISABLE_SECURITY=true

# ===========================================
# Security Settings
# ===========================================
# Secret key for session encryption (generate a random string)
SECRET_KEY=your-secret-key-here-change-in-production

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:8000,http://localhost:3000

# ===========================================
# Logging Configuration
# ===========================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
